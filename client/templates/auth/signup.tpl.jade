.container
  .auth.auth--signup
    h4.auth__title Sign Up â€” It's Absolutely <b>Free</b>
    form.auth__form
      .auth__group
        input.input(type="text"
                    name="first_name"
                    placeholder="First Name"
                    required)

        input.input(type="text"
                    name="last_name"
                    placeholder="Last Name"
                    required)

      .auth__group
        input.input(type="email"
                    name="email"
                    placeholder="Email Address"
                    required)

      .auth__group
        input.input(type="password"
                    name="password"
                    placeholder="Password"
                    required)

      .auth__group
        button.btn.btn--block(type="submit") Sign Up Free

      .auth__group
        .auth__text By clicking "Sign Up Free" I agree to the <a class="auth__link" href="{{pathFor route='legal'}}">Terms of Service</a>.

  .auth.auth--divider OR

  .auth.auth--social
    .auth__group
      button.btn.btn--block.btn--facebook(type="button") <b>Sign Up</b> with <b>Facebook</b>
      button.btn.btn--block.btn-twitter(type="button") <b>Sign Up</b> with <b>Twitter</b>

  .auth.auth--footer
    | Don't have an account? <a class="auth__link" href="{{pathFor route='login'}}">Log In</a>