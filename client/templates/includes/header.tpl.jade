//- Header (Block)
header.header

  //- Container (Block)
  .container

    //- Logo (Block)
    .logo: img(src='img/logo.svg')

    //- Nav (Block)
    .nav
      ul.nav__menu
        li.nav__item(class="{{isActiveRoute regex='home|post'}}")
          a(href="{{pathFor route='home'}}") Library
          ul.nav__menu
            li.nav__item(class="{{isActiveRoute}}")
              a(href="{{pathFor}}") Components
            li.nav__item(class="{{isActiveRoute}}")
              a(href="{{pathFor}}") Courses
            li.nav__item(class="{{isActiveRoute}}")
              a(href="{{pathFor}}") Experiments
            li.nav__item(class="{{isActiveRoute}}")
              a(href="{{pathFor}}") Templates
        li.nav__item(class="{{isActiveRoute 'blog'}}")
          a(href="{{pathFor route='blog'}}") Blog
        li.nav__item(class="{{isActiveRoute 'slack'}}")
          a(href="{{pathFor route='slack'}}") Slack
        li.nav__item(class="{{isActiveRoute 'pricing'}}")
          a(href="{{pathFor route='pricing'}}") Pricing
        li.nav__item
          a.icon.icon--dots-horizontal(href="#")
            img(src="img/icons/dots-horizontal.svg")
          ul.nav__menu
            li.nav__item(class="{{isActiveRoute 'about'}}")
              a(href="{{pathFor route='about'}}") About
            li.nav__item(class="{{isActiveRoute 'sponsor'}}")
              a(href="{{pathFor route='sponsor'}}") Sponsor
            li.nav__item(class="{{isActiveRoute 'legal'}}")
              a(href="{{pathFor route='legal'}}") Legal
            li.nav__item(class="{{isActiveRoute 'support'}}")
              a(href="{{pathFor route='support'}}") Support

    //- Header Divider (Element)
    .header__divider

    //- Search (Block)
    form.search
      label.icon.icon--search(for="search")
        img(src="img/icons/search.svg")
      input.search__field(type="search"
                          name="search"
                          placeholder="Search for resources")

